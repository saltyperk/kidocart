{
  "version": 2,
  "cleanUrls": true,
  "trailingSlash": false,
  "public": true,
  "buildCommand": "",
  "outputDirectory": ".",
  "framework": null,
  "functions": {
    "api/*.js": {
      "maxDuration": 10
    }
  },
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" }
    { "source": "/api/products", "destination": "/api/products.js" },
    { "source": "/api/users", "destination": "/api/users.js" },
    { "source": "/api/orders", "destination": "/api/orders.js" },
    { "source": "/api/cart", "destination": "/api/cart.js" },
    { "source": "/api/wishlist", "destination": "/api/wishlist.js" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" }
      ]
    }
  ]
}
